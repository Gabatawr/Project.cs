<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:w="clr-namespace:WPF_EFCore_1.Views.Windows">

    <Style x:Key="MainWindowStyle" TargetType="{x:Type w:MainWindow}">

        <Setter Property="Height" Value="450"/>
        <Setter Property="MinHeight" Value="{Binding MinHeightParameter}"/>
        
        <Setter Property="Width" Value="800"/>
        <Setter Property="MinWidth" Value="{Binding MinWidthParameter}"/>

        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="ResizeMode" Value="CanResize"/>

        <Setter Property="Background" Value="#E8080018"/>

        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome
                        NonClientFrameEdges="None"
                        GlassFrameThickness="0"
                        ResizeBorderThickness="3,0,3,3"
                        CaptionHeight="6"
                        CornerRadius="0"/>
            </Setter.Value>
        </Setter>

    </Style>
    
</ResourceDictionary>